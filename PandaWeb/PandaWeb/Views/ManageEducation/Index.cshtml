@model IEnumerable<PandaWeb.Models.EducationPlan>

@{
    ViewBag.Title = "Utbildningar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Utbildningar</h2>

<p>
    @Html.ActionLink("Skapa Utbildning", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaceOfStudy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormOfStudy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaceOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormOfStudy)
            </td>
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.EducationId }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.EducationId }) |
                @Html.ActionLink("Radera", "Delete", new { id = item.EducationId })
            </td>
        </tr>
    }

</table>
